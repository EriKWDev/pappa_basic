for   FOR
to    TO
step  STEP
next  NEXT
label
goto  GOTO
gosub  GOSUB
input  INPUT
print PRINT
let   LET
rem   REM
if    IF
then  THEN
else  ELSE
end
stop
poke
data  DATA
return
restore
dim  DIM
while WHILE
wend  WEND
open  OPEN
close   CLOSE
remove
#
